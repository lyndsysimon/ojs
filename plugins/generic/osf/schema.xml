<schema version="0.2">
	<!--
	 *
	 * TABLE osf_links
	 *
	 -->
	<table name="osf_links">
		<field name="article_id" type="I8">
			<KEY/>
		</field>
		<field name="osf_url" type="C2" size="255">
			<NOTNULL/>
		</field>
		<descr>OJS metadata for articles.</descr>
		<index name="osf_links_article_id">
			<col>article_id</col>
			<UNIQUE/>
		</index>
	</table>

</schema>
